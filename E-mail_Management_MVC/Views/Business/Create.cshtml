@model E_mail_Management_MVC.Models.Business.BusinessInputModel
@{
    ViewData["Title"] = "Create Business";
}

<div class="container-fluid mb-4">
    <a class="btn btn-outline-secondary mb-1" asp-action="Index" asp-controller="Business" asp-area=""><i class="fa fa-arrow-left"></i> Lista de Parceiros </a>
    <!-- Page Heading -->
    <div class="card ">
        <div class="card-header bg-secondary">
            <h4 class="card-title text-white">Criar Parceiro</h4>
        </div>
        <div class="card-body ">
            <form asp-controller="Business" asp-action="Create">
                <div class="mb-2">
                    <label>Parceiro</label>
                    <input type="text" asp-for="BusinessName" class="form-control" />
                    <span asp-validation-for="BusinessName" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label>Ativo?</label>
                    <input type="checkbox" asp-for="Active" />
                </div>
                <div class="mb-2">
                    <label>NNI?</label>
                    <input type="checkbox" asp-for="BusinessNNI" />
                </div>


                <div class="mb-2">
                    <button type="submit" class="btn btn-secondary">Add Parceiro</button>
                </div>
            </form>
        </div>


    </div>



</div>